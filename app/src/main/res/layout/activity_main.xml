<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView_one"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="44dp"
        android:background="#FF0000"
        android:text=""
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_three"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="44dp"
        android:background="#A0A0A0"
        android:text=""
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/textView_two"
        app:layout_constraintTop_toTopOf="@+id/textView_two" />

    <TextView
        android:id="@+id/textView_two"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="44dp"
        android:background="#A0A0A0"
        android:text=""
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/textView_one"
        app:layout_constraintTop_toTopOf="@+id/textView_one" />

    <Button
        android:id="@+id/button_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="80dp"
        android:text="click"
        app:layout_constraintStart_toEndOf="@+id/textView_one"
        app:layout_constraintTop_toBottomOf="@+id/textView_two" />

</androidx.constraintlayout.widget.ConstraintLayout>